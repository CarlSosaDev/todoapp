<%= render 'shared/session' %>
<h1> Listing all Todos </h1>
<p id="new-todo">
<%= link_to 'New Todo', new_todo_path, class:"btn btn-success" %>
</p>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading"></div>
<table class="table table-bordered">
<tr>
<th> Name </th>
<th> Description </th>
</tr>
<% @todos.each do |todo| %>
<tr>
 <td> <%= todo.name %> </td>
 <td> <%= todo.description %> </td>
 <td> <%= link_to 'Edit', edit_todo_path(todo) %></td>
 <td> <%= link_to 'Show', todo_path(todo) %></td>
 <td><%= link_to 'Delete', todo_path(todo), method: :delete,data: {confirm: "Are you sure?"} %></td>
</tr>
<% end %>
</table>
</div>
<p id="go-back">
  <%= link_to 'Go back', root_path, class:"btn btn-warning" %>
  <br/>

</p>
